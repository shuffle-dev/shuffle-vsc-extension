{
    "name": "shuffle",
    "displayName": "shuffle-ext",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:shuffle.openWindow"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "keybindings": {
            "key": "ctrl+d",
            "command": "shuffle.openWindow"
        },
        "commands": [
            {
                "command": "shuffle.openWindow",
                "title": "Shuffle builder: Open shuffle builder window"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm-run-all compile:ext compile:webview",
        "compile:ext": "tsc -p ./",
        "compile:webview": "npm-run-all --parallel compile:webview:html compile:webview:css compile:webview:js",
        "compile:webview:html": "parcel watch ./src/webview/pug/index.pug --out-dir ./media",
        "compile:webview:css": "parcel watch ./src/webview/scss/main.scss --out-dir ./media",
        "compile:webview:js": "parcel watch ./src/webview/ts/main.ts --out-dir ./media --target electron",
        "lint": "eslint src --ext ts",
        "watch": "npm-run-all --parallel watch:ext watch:webview",
        "watch:ext": "tsc -watch -p ./",
        "watch:webview": "npm-run-all --parallel watch:webview:html watch:webview:css watch:webview:js",
        "watch:webview:html": "parcel watch ./src/webview/pug/index.pug --out-dir ./media",
        "watch:webview:css": "parcel watch ./src/webview/scss/main.scss --out-dir ./media",
        "watch:webview:js": "parcel watch ./src/webview/ts/main.ts --out-dir ./media --target electron"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.11.7",
        "@types/node-fetch": "^2.5.7",
        "@types/vscode": "^1.50.0",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "eslint": "^7.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "pug": "^3.0.0",
        "sass": "^1.28.0",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "clipboardy": "^2.3.0",
        "node-fetch": "^2.6.1"
    }
}
